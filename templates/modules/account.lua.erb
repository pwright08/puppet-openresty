cjson = require("cjson");

local account = {}

function account.get_user(userid)
    ngx.log(ngx.INFO, 'Getting user information for user: ' .. userid)

    local usersResult = ngx.location.capture('/api/users/' .. userid, { method = ngx.HTTP_GET });

    if usersResult.status ~= ngx.HTTP_OK then
        ngx.log(ngx.WARN, 'Could not get user information. Status :' .. usersResult.status)
        ngx.header["X-Frame-Options"] = 'sameorigin'
        ngx.header["X-XSS-Protection"] = '1'
        ngx.header["X-Content-Type-Options"] = 'nosniff'
        ngx.exit(500)
    end
    return cjson.decode(usersResult.body)
end

return account
